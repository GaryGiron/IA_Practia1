extends layout

block content
  h1= title
  div
    form(action="/busca/student" method="POST")
      table.table.table-striped
        tr
          th
            p Carné:
          th 
            input(type="text" name="carne" placeholder="Ingrese el carnet")
        tr
          th
            p Semestre
          th
            input(type="text" name="semestre" placeholder="Semetre de solicitud")
        tr
          th
            p Año:
          th
            input(type="text" name="anio" placeholder="Año de Solicitud")
        tr
          th
          th
            input(type="submit" value="Consultar Estudiante" class="btn btn-primary")
  div.contains
   p=result
  h3 Ver Estudiantes	
  table.table.table-striped
   for student in estudiantes
    tr
     td= student.nombre
     td= student.carnet
     td= student.dpi
     td= student.semestre
     td= student.anio
     td= student.grupo
     td= student.correo

